<h3>NEW MESSAGE</h3>
    <%= form_for(@message) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :to_account_name %>
      <% if @message.to_account_name.nil? %>
          <%= f.text_field :to_account_name, class: 'form-control' %>
      <% else %>
          <%= f.text_field :to_account_name, class: 'form-control', readonly: true %>
      <% end %>
      <%= f.label :message %>
      <%= f.text_area :message%>
      <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>