<% provide(:title, "With #{@message.to_account_name}") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info'%>
    </section>
    <section>
      <%= render 'contacts' %>
    </section>
  </aside>
  <div class="col-md-5">
      <% if @messages.any? %>
      <h3>Messages(<%= @messages.count %>)</h3>
      
      <ol class="messages">
        <%= render @messages %>
      </ol>
      <%= will_paginate @messages %>
      <% end %>
  </div>
  
  <div class="col-md-3">
    <%= render 'shared/message_form'%>
  </div>
  
</div>